# AWS SSH Configuration
# Copy this file to your project root as .env and update the values

# Required: AWS instance hostname or IP address
AWS_SSH_HOST=0.0.0.0

# Optional: SSH username (default: forge)
AWS_SSH_USER=forge

# Required: Path to SSH private key
AWS_SSH_KEY=~/.ssh/rsa-aws-key-2025

# Optional: SSH port (default: 22)
AWS_SSH_PORT=22

# Leave empty to use default directories (/home/user, /var/log, /opt)
AWS_SSH_DIRECTORIES=/home,/var/log,/opt